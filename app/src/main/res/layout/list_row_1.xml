<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:text="שם לקוח"
        android:textColor="#000000"
        tools:text="שם לקוח" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:layout_below="@id/textView6"
        android:layout_alignParentRight="true"
        android:text="טלפון"
        android:textColor="#000000"
        tools:text="טלפון" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:layout_below="@id/textView7"
        android:layout_alignParentRight="true"
        android:text="שם הכלב"
        android:textColor="#000000"
        tools:text="שם הכלב" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:layout_below="@id/textView8"
        android:layout_alignParentRight="true"
        android:text="תאריך"
        android:textColor="#000000"
        tools:text="תאריך" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:layout_below="@id/textView9"
        android:layout_alignParentRight="true"
        android:text="מחיר"
        android:textColor="#000000"
        tools:text="מחיר" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:layout_below="@id/textView10"
        android:layout_alignParentRight="true"
        android:text="מצב הכלב"
        android:textColor="#000000"
        tools:text="מצב הכלב" />

    <TextView
        android:id="@+id/clientNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/textView6"
        android:textColor="#000000"
        android:textDirection="firstStrongRtl" />

    <TextView
        android:id="@+id/clientPhoneTextView"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/clientNameTextView"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/textView7"
        android:textColor="#000000"
        android:textDirection="firstStrongRtl" />

    <TextView
        android:id="@+id/dogNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/clientPhoneTextView"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/textView8"
        android:textColor="#000000"
        android:textDirection="firstStrongRtl" />

    <TextView
        android:id="@+id/todayTextView"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/dogNameTextView"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/textView9"
        android:textColor="#000000"
        android:textDirection="firstStrongRtl" />

    <TextView
        android:id="@+id/priceTextView"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/todayTextView"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/textView10"
        android:textColor="#000000"
        android:textDirection="firstStrongRtl" />

    <TextView
        android:id="@+id/dogStatusTextView"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/priceTextView"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/textView11"
        android:textColor="#000000"
        android:textDirection="firstStrongRtl" />

    <Button
        android:id="@+id/deleteBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:text="מחק"
        android:textColor="#000000" />

</RelativeLayout>




